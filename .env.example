# TA Consulting Platform - Environment Variables
# Copy this file to .env and fill in the values

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# NextAuth.js
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here

# AWS S3 (for document storage)
AWS_PROFILE=your-profile
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER_PREFIX=your-prefix/

# AbacusAI (optional)
ABACUSAI_API_KEY=

# Email (Resend)
RESEND_API_KEY=re_xxx

# Google Search RAG (optional)
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Apify Scrapers
APIFY_TOKEN=apify_api_xxx

# Apify Actor IDs (after deployment)
APIFY_ACTOR_PT2030=
APIFY_ACTOR_PEPAC=
APIFY_ACTOR_PRR=
APIFY_ACTOR_EC=
APIFY_ACTOR_HORIZON=
APIFY_ACTOR_IPDJ=

# Gemini AI (Optional / Deprecated for Writer)
# GEMINI_API_KEY=AIzaSyxxx

# OpenRouter (Claude 3.5 Sonnet / Opus)
OPENROUTER_API_KEY=sk-or-v1-xxx

# Firecrawl (web scraping)
FIRECRAWL_API_KEY=fc-xxx

# Production Flags
# Set to 'true' to disable Puppeteer browser automation (recommended for Vercel)
DISABLE_PUPPETEER=false

# Cron Security
CRON_SECRET=your_cron_secret_here

# Slack Integration
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_REDIRECT_URI=https://your-domain.com/api/integrations/slack

# Microsoft Teams Integration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=
TEAMS_TENANT_ID=

# Stripe Payments
STRIPE_SECRET_KEY=sk_xxx
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# Gemini RAG File Search
GEMINI_API_KEY=AIzaSyxxx
GEMINI_RAG_STORE_ID=fileSearchStores/xxx
GEMINI_CANDIDATURAS_STORE_ID=fileSearchStores/xxx

# Neon API (optional - for management)
NEON_API_KEY=
