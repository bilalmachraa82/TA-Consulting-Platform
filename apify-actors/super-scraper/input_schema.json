{
    "title": "Super Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "portals": {
            "title": "Portals to scrape",
            "type": "array",
            "description": "Which funding portals to scrape",
            "default": [
                "portugal2030",
                "prr",
                "pepac",
                "horizonEurope",
                "europaCriativa",
                "ipdj"
            ],
            "items": {
                "type": "string",
                "enum": [
                    "portugal2030",
                    "prr",
                    "pepac",
                    "horizonEurope",
                    "europaCriativa",
                    "ipdj"
                ]
            }
        },
        "maxItemsPerPortal": {
            "title": "Max items per portal",
            "type": "integer",
            "description": "Maximum number of items to fetch per portal",
            "default": 100,
            "minimum": 1,
            "maximum": 500
        },
        "onlyOpen": {
            "title": "Only open calls",
            "type": "boolean",
            "description": "Only fetch open/active funding calls",
            "default": true
        }
    }
}